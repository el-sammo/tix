<div class="sunburst" ng-cloak ng-controller="LayoutController">
	<!-- BIG Navbar -->
	<nav class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<span class="footerLink" ng-click="showChampionship(league.id)" ng-repeat="league in leagues" track by $index>{{league.league}}</span>
			<span ng-show="accessAccount" class="footerLink" ng-click="showAccount()">My Account</span>
			<span ng-show='showLogout' class="footerLink" ng-click="logOut()">Log Out</span>
			<span class="footerLink" ng-click="welcome()">How it Works</span>
			<span class="footerLink" ng-click="contact()">Contact Us</span>
			<span ng-show='!showLogout && !accessAccount' class="footerLink" ng-click="logIn()">Log In</span>
			<iframe 
				src="
					//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2F1ticketstycoon&amp;
					width&amp;
					layout=button_count&amp;
					action=like&amp;
					show_faces=true&amp;
					share=true&amp;
					height=21&amp;
					appId=310913685599001
				"
				scrolling="no"
				frameborder="0"
				style="
					top: 4px;
					border: none; 
					overflow: hidden; 
					height: 21px;
					position: relative;
				"
				allowTransparency="true"
			>
			</iframe>
		</div>
	</nav>
	<!-- /BIG Navbar -->

	<br/>
	<div class="row">
		<div class="col-md-2 col-md-offset-5">
			<a href="/" style="text-decoration: none;">
				<div class="headLogo">
				</div>
			</a>
		</div>
	</div>
	<br/>


	<!-- Small Navbar -->
	<nav id="fms-headbar"
		class="navbar navbar-default navbar-fixed-top visible-md-inline visible-sm-inline visible-xs-inline"
	>
		<div class="container-fluid">
			<div>
				<ul class="nav navbar-nav">
					<li>
						<div class="fms-brand" style="position: relative; margin-right: 18px;">
							<a href="/app/">
								Home
							</a>
						</div>
						<a ng-click="menuClicked()" class="pull-right" style="margin-right: 18px;">
							<i class="fa fa-bars fa-lg"></i>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<div class="visible-md-block visible-sm-block visible-xs-block"
		style="height: 90px; width: 99%;"
	></div>
	<ul ng-show="showMenu" 
		class="list-group visible-md-inline visible-sm-inline visible-xs-inline"
	>
		<li class="list-group-item">
			<a ng-show="!accessAccount" style="cursor: pointer;"
				ng-click="logIn(); menuClicked(false)"
			>Account</a>
			<a ng-show="accessAccount" href="/app/account/" ng-click="menuClicked(false)">
				Account
			</a>
		</li>
		<li class="list-group-item">
			<a href="/app/cart" ng-click="menuClicked(false)">
				<i class="fa fa-shopping-cart"></i> &nbsp;Cart
			</a>
		</li>
		<li class="list-group-item">
			<span ng-show='showLogout' class="managementLink" ng-click="logOut()">Log Out</span><br/>
		</li>
	</ul>
	<!-- /Small Navbar -->
</div>
<div ng-controller="MessageController" id="fms-messenger" ng-cloak>
  <alert type="{{alertType}}" ng-show="userMessage" close="close()">
    <strong ng-show="title">{{title}}&nbsp;</strong>
    {{userMessage}}
  </alert>
</div>

<div class="container" id="fms-main-container">
  <div id="fms-main">
    <div ng-view></div>
  </div>
</div>

